<ListPage>:
    name: 'list'
    navigator: _navigator
    on_enter: app.SCRMGMT.update_nav(self.navigator)
    on_leave: app.SCRMGMT.reset_nav_buttons(self.navigator)
    BoxLayout:
        orientation: 'vertical'
        NavigationTabs:
            id: _navigator
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: 'vertical'
                RecycleView:
                    id: list_view
                    viewclass: 'Button'  # Use Button for now
                    RecycleBoxLayout:
                        default_size: None, dp(56)  # Adjust height as needed
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
