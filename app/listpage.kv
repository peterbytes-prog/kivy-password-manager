<ListPage>:
    name: 'list'
    navigator: _navigator
    on_enter: app.SCRMGMT.update_nav(self.navigator)
    on_leave: app.SCRMGMT.reset_nav_buttons(self.navigator)
    BoxLayout:
        orientation: 'vertical'
        NavigationTabs:
            id: _navigator
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MainBody:
                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'center'
                    size_hint_y: None
                    height: 100
                    TextInput:
                        id: search_input
                        size_hint_x: 0.7
                        hint_text: 'Search...'
                        on_text: root.filter_list(self.text)
                RecycleView:
                    id: list_view
                    viewclass: 'Button'  # Use Button for now
                    RecycleBoxLayout:
                        default_size: None, dp(56)  # Adjust height as needed
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
