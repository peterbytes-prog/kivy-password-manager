<NavButton@ToggleButton>:
    text: ''
    key: ''
    group: 'nav'
    # on_press: app.change_screen(self.key)
    on_state: 'down' if app.change_screen(self.key) == self.key else 'normal'
<NavigationTabs>:
    size_hint_y: None
    height: '48dp'
    orientation: 'horizontal'
    NavButton:
        text: 'Home'
        key: 'home'

    NavButton:
        text: 'Create/Edit'
        key: 'create_edit'

    NavButton:
        text: 'List'
        key: 'list'
    NavButton:
        text: 'Detail'
        key: 'detail'
