<CreateEditPage>:
    name: 'create_edit'
    navigator: _navigator
    on_enter: app.SCRMGMT.update_nav(self.navigator)
    on_leave: app.SCRMGMT.reset_nav_buttons(self.navigator)
    BoxLayout:
        orientation: 'vertical'
        NavigationTabs:
            id: _navigator
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: title_input
                hint_text: 'Title'
            TextInput:
                id: username_input
                hint_text: 'Username'
            TextInput:
                id: password_input
                hint_text: 'Password'
                password: True
            BoxLayout:
                size_hint_y: None
                height: '48dp'
                Button:
                    text: 'Save'
                    on_press: root.save_or_update_entry()
                Button:
                    text: 'Cancel'
                    on_press: root.manager.current = 'list'
